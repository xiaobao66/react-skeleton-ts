{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "importsNotUsedAsValues": "preserve",
    "target": "es2018",
    "module": "esnext",
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "dva-loading": ["src/types/dva-loading"],
      "dva/dynamic": ["src/types/dva/dynamic"],
      "dva-model-extend": ["src/types/dva-model-extend"],
      "pages/*": ["src/pages/*"],
      "models/*": ["src/models/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
}
